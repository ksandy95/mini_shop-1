<h1>Edit Merchant Form</h1>

<%= form_tag merchant_path(@merchant), method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @merchant.name%>

  <%= label_tag :address %>
  <%= text_field_tag :address, @merchant.address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, @merchant.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, @merchant.state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, @merchant.zip %>

  <%= submit_tag 'Submit' %>
<% end %>

<%= link_to "Merchants", merchants_path%>
<%= link_to "Items", items_path%>
<%= link_to "Home", items_path%>
